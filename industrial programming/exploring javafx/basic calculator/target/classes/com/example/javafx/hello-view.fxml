<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javafx.HelloController">
<TextField fx:id="display" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" />
<Button text="1" onAction="#handleDigit" GridPane.columnIndex="0" GridPane.rowIndex="1" />
<Button text="2" onAction="#handleDigit" GridPane.columnIndex="1" GridPane.rowIndex="1" />
<Button text="3" onAction="#handleDigit" GridPane.columnIndex="2" GridPane.rowIndex="1" />
<Button text="/" onAction="#handleOperator" GridPane.columnIndex="3" GridPane.rowIndex="1" />

<Button text="4" onAction="#handleDigit" GridPane.columnIndex="0" GridPane.rowIndex="2" />
<Button text="5" onAction="#handleDigit" GridPane.columnIndex="1" GridPane.rowIndex="2" />
<Button text="6" onAction="#handleDigit" GridPane.columnIndex="2" GridPane.rowIndex="2" />
<Button text="-" onAction="#handleOperator" GridPane.columnIndex="3" GridPane.rowIndex="2" />

<Button text="7" onAction="#handleDigit" GridPane.columnIndex="0" GridPane.rowIndex="3" />
<Button text="8" onAction="#handleDigit" GridPane.columnIndex="1" GridPane.rowIndex="3" />
<Button text="9" onAction="#handleDigit" GridPane.columnIndex="2" GridPane.rowIndex="3" />
<Button text="+" onAction="#handleOperator" GridPane.columnIndex="3" GridPane.rowIndex="3" />

<Button text="0" onAction="#handleDigit" GridPane.columnIndex="0" GridPane.rowIndex="4" />
<Button text="C" onAction="#handleClear" GridPane.columnIndex="1" GridPane.rowIndex="4" />
<Button text="=" onAction="#handleEquals" GridPane.columnIndex="2" GridPane.rowIndex="4" />
<Button text="*" onAction="#handleOperator" GridPane.columnIndex="3" GridPane.rowIndex="4" />
</GridPane>